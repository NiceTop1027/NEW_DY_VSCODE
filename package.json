{
  "name": "dy_vscode",
  "version": "1.0.0",
  "description": "덕영고등학교 VS Code - 웹 기반 코드 에디터",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "start": "node server.js",
    "build": "webpack --config webpack.config.js"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@xterm|xterm-addon-fit)/)"
    ],
    "moduleNameMapper": {
      "^monaco-editor$": "<rootDir>/__mocks__/monaco-editor.js",
      "^./api.js$": "<rootDir>/public/js/api.js",
      "^./editor.js$": "<rootDir>/public/js/editor.js",
      "^./utils.js$": "<rootDir>/public/js/utils.js"
    },
    "moduleDirectories": [
      "node_modules",
      "public/js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NiceTop1027/DY_VScode.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NiceTop1027/DY_VScode/issues"
  },
  "homepage": "https://github.com/NiceTop1027/DY_VScode#readme",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "monaco-editor-webpack-plugin": "^7.1.1",
    "style-loader": "^4.0.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@isomorphic-git/lightning-fs": "^4.6.2",
    "aos": "^2.3.4",
    "axios": "^1.12.2",
    "browserfs": "^1.4.3",
    "buffer": "^6.0.3",
    "chart.js": "^4.5.0",
    "clipboard": "^2.0.11",
    "dexie": "^4.2.1",
    "diff2html": "^3.4.52",
    "dropzone": "^6.0.0-beta.2",
    "emmet": "^2.4.11",
    "events": "^3.3.0",
    "express": "^5.1.0",
    "express-ws": "^5.0.2",
    "file-icons-js": "^1.1.0",
    "fs-extra": "^11.3.2",
    "fuse.js": "^7.1.0",
    "gsap": "^3.13.0",
    "highlight.js": "^11.11.1",
    "hotkeys-js": "^3.13.15",
    "html2canvas": "^1.4.1",
    "idb": "^8.0.3",
    "isomorphic-git": "^1.34.0",
    "localforage": "^1.10.0",
    "lottie-web": "^5.13.0",
    "marked": "^16.4.0",
    "monaco-languageclient": "^10.1.0",
    "multer": "^2.0.2",
    "node-pty": "^1.0.0",
    "nprogress": "^0.2.0",
    "particles.js": "^2.0.0",
    "path-browserify": "^1.0.1",
    "pickr": "^0.1.4",
    "prettier": "^3.6.2",
