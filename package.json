{
  "name": "dy_vscode",
  "version": "1.0.0",
  "description": "덕영고등학교 VS Code - 웹 기반 코드 에디터",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "start": "node server.js",
    "build": "webpack --config webpack.config.js"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@xterm|xterm-addon-fit)/)"
    ],
    "moduleNameMapper": {
      "^monaco-editor$": "<rootDir>/__mocks__/monaco-editor.js",
      "^./api.js$": "<rootDir>/public/js/api.js",
      "^./editor.js$": "<rootDir>/public/js/editor.js",
      "^./utils.js$": "<rootDir>/public/js/utils.js"
    },
    "moduleDirectories": [
      "node_modules",
      "public/js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NiceTop1027/DY_VScode.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NiceTop1027/DY_VScode/issues"
  },
  "homepage": "https://github.com/NiceTop1027/DY_VScode#readme",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "monaco-editor-webpack-plugin": "^7.1.1",
    "style-loader": "^4.0.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "express": "^5.1.0",
    "express-ws": "^5.0.2",
    "fs-extra": "^11.3.2",
    "multer": "^2.0.2",
    "node-pty": "^1.0.0",
    "vscode-debugadapter": "^1.51.0",
    "vscode-debugprotocol": "^1.51.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
